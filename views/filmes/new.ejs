<h1><%= title %></h1>

<% if (typeof error !== 'undefined') { %>
    <div class="alert alert-error">
        <%= error %>
    </div>
<% } %>

<form action="/filmes" method="POST">
    <div class="form-group">
        <label for="titulo">Título:</label>
        <input type="text" id="titulo" name="titulo" 
               value="<%= typeof filme !== 'undefined' ? filme.titulo : '' %>" required>
    </div>
    
    <div class="form-group">
        <label for="diretor">Diretor:</label>
        <input type="text" id="diretor" name="diretor" 
               value="<%= typeof filme !== 'undefined' ? filme.diretor : '' %>">
    </div>
    
    <div class="form-group">
        <label for="ano">Ano de Lançamento:</label>
        <input type="number" id="ano" name="anoLancamento" 
               value="<%= typeof filme !== 'undefined' ? filme.anoLancamento : '' %>">
    </div>
    
    <div class="form-actions">
        <button type="submit" class="btn">Salvar</button>
        <a href="/filmes" class="btn">Cancelar</a>
    </div>
</form>